{
  "build": {
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm vite build --config vite.config.minimal.ts",
    "devPath": "http://localhost:1420",
    "distDir": "../dist-minimal",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Video Downloader Pro - Minimal Test",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "center": true,
        "setTitle": true,
        "close": true,
        "show": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.videodownloader.pro.minimal",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"]
    },
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "title": "Video Downloader Pro - Minimal Test",
        "width": 600,
        "height": 400,
        "center": true,
        "resizable": true
      }
    ],
    "updater": {
      "active": false
    }
  }
}
